<?xml version="1.0" encoding="UTF-8"?>

<clientConfig version="1.1">
  <emailProvider id="{{ config.domain }}">
    <domain>{{ config.domain }}</domain>
    <displayName>{{ config.domain }} Mail</displayName>
    <displayShortName>{{ config.domain }}</displayShortName>
    <incomingServer type="imap">
      <hostname>{{ config.imap.host }}</hostname>
      <port>{{ config.imap.port }}</port>
      <socketType>{{ config.imap.encryption }}</socketType>
      <authentication>{{ config.imap.spa }}</authentication>
      <username>{{ config.imap.login }}</username>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>{{ config.pop3.host }}</hostname>
      <port>{{ config.pop3.port }}</port>
      <socketType>{{ config.pop3.encryption }}</socketType>
      <authentication>{{ config.pop3.spa }}</authentication>
      <username>{{ config.pop3.login }}</username>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>{{ config.smtp.host }}</hostname>
      <port>{{ config.smtp.port }}</port>
      <socketType>{{ config.smtp.encryption }}</socketType>
      <authentication>{{ config.smtp.spa }}</authentication>
      <username>{{ config.smtp.login }}</username>
    </outgoingServer>
  </emailProvider>
</clientConfig>
